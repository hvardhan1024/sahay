  <script>
    // Form progress tracking
    const form = document.getElementById('feedback-form');
    const progressBar = document.getElementById('progress-bar');
    const progressText = document.getElementById('progress-text');
    const sections = document.querySelectorAll('.form-section');
    
    // Calculate form completion
    function updateProgress() {
      const requiredFields = form.querySelectorAll('[required]');
      let completed = 0;
      
      requiredFields.forEach(field => {
        if (field.type === 'radio') {
          if (form.querySelector(`[name="${field.name}"]:checked`)) {
            completed++;
          }
        } else if (field.type === 'checkbox') {
          if (form.querySelectorAll(`[name="${field.name}"]:checked`).length > 0) {
            completed++;
          }
        } else if (field.value.trim() !== '') {
          completed++;
        }
      });
      
      const progress = Math.round((completed / requiredFields.length) * 100);
      progressBar.style.width = progress + '%';
      progressText.textContent = progress + '%';
    }

    // Rating system functionality
    function setupRatingSystem() {
      const ratingGroups = ['overallExperience', 'easeOfUse', 'helpfulnessRating', 'designRating', 
                           'peerChatRating', 'aiEducatorRating', 'resourcesRating', 'safetyRating'];
      
      ratingGroups.forEach(groupName => {
        const radios = form.querySelectorAll(`[name="${groupName}"]`);
        radios.forEach((radio, index) => {
          radio.addEventListener('change', () => {
            // Update all labels in this group
            radios.forEach((r, i) => {
              const label = form.querySelector(`label[for="${r.id}"]`);
              if (i <= index) {
                label.style.color = '#f59e0b';
                label.style.transform = 'scale(1.1)';
              } else {
                label.style.color = '#d1d5db';
                label.style.transform = 'scale(1)';
              }
            });
            updateProgress();
          });
        });
      });
    }

    // Character counting for textareas
    function setupCharacterCounting() {
      const textareas = form.querySelectorAll('textarea[maxlength]');
      textareas.forEach(textarea => {
        const maxLength = textarea.getAttribute('maxlength');
        const counter = document.createElement('div');
        counter.className = 'text-xs text-gray-400 mt-1 text-right';
        counter.textContent = `0/${maxLength}`;
        textarea.parentNode.appendChild(counter);
        
        textarea.addEventListener('input', () => {
          const current = textarea.value.length;
          counter.textContent = `${current}/${maxLength}`;
          counter.className = current > maxLength * 0.9 
            ? 'text-xs text-orange-500 mt-1 text-right font-medium' 
            : 'text-xs text-gray-400 mt-1 text-right';
        });
      });
    }

    // Form validation and submission
    form.addEventListener('submit', function(e) {
      const primaryFeatures = form.querySelectorAll('[name="primaryFeatureUsed"]:checked');
      if (primaryFeatures.length === 0) {
        e.preventDefault();
        alert('Please select at least one feature you have used.');
        return;
      }
      
      // Show loading state
      const submitButton = form.querySelector('[type="submit"]');
      submitButton.disabled = true;
      submitButton.textContent = 'Submitting...';
      submitButton.className = submitButton.className.replace('hover:bg-gray-100 hover:scale-105', '');
    });

    // Real-time progress updates
    form.addEventListener('input', updateProgress);
    form.addEventListener('change', updateProgress);

    // Handle technical issues "none" checkbox
    const technicalIssues = form.querySelectorAll('[name="technicalIssuesEncountered"]');
    const noneCheckbox = form.querySelector('[name="technicalIssuesEncountered"][value="none"]');
    
    technicalIssues.forEach(checkbox => {
      checkbox.addEventListener('change', () => {
        if (checkbox.value === 'none' && checkbox.checked) {
          // Uncheck all other technical issues
          technicalIssues.forEach(cb => {
            if (cb.value !== 'none') cb.checked = false;
          });
        } else if (checkbox.checked && checkbox.value !== 'none') {
          // Uncheck "none" if any other issue is selected
          noneCheckbox.checked = false;
        }
      });
    });

    // Smooth scrolling for better UX
    function smoothScrollToElement(element) {
      element.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'center' 
      });
    }

    // Initialize everything
    document.addEventListener('DOMContentLoaded', () => {
      setupRatingSystem();
      setupCharacterCounting();
      updateProgress();
      
      // Add animation delays for sections
      sections.forEach((section, index) => {
        section.style.animationDelay = `${index * 0.1}s`;
      });
      
      // Focus management for accessibility
      const firstInput = form.querySelector('input[required]');
      if (firstInput) {
        firstInput.focus();
      }
    });

    // Auto-save functionality (optional - saves to localStorage)
    let autoSaveTimeout;
    form.addEventListener('input', () => {
      clearTimeout(autoSaveTimeout);
      autoSaveTimeout = setTimeout(() => {
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        localStorage.setItem('sahay-feedback-draft', JSON.stringify(data));
      }, 2000);
    });

    // Load saved data on page load
    window.addEventListener('load', () => {
      const saved = localStorage.getItem('sahay-feedback-draft');
      if (saved && !form.querySelector('[name="name"]').value) {
        try {
          const data = JSON.parse(saved);
          Object.keys(data).forEach(key => {
            const field = form.querySelector(`[name="${key}"]`);
            if (field) {
              if (field.type === 'radio' || field.type === 'checkbox') {
                const option = form.querySelector(`[name="${key}"][value="${data[key]}"]`);
                if (option) option.checked = true;
              } else {
                field.value = data[key];
              }
            }
          });
          updateProgress();
        } catch (e) {
          console.log('Could not restore saved data');
        }
      }
    });

    // Clear saved data on successful submission
    form.addEventListener('submit', () => {
      localStorage.removeItem('sahay-feedback-draft');
    });
  </script>
