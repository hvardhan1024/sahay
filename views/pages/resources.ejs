<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#10b981">
</head>
<body class="min-h-screen bg-gray-50">
  <%- include('../partials/navbar') %>
  
  <div class="flex">
    <%- include('../partials/sidebar') %>
    
    <!-- Main Content -->
    <div class="flex-1 p-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Wellness Resources</h1>
        <p class="text-gray-600 text-lg">
          Carefully curated articles, videos, and tools to support your mental health journey.
        </p>
      </div>

      <!-- Resource Categories -->
      <div class="mb-8">
        <div class="flex flex-wrap gap-3">
          <button onclick="filterResources('all')" class="filter-btn active px-4 py-2 bg-green-500 text-white rounded-lg font-medium transition-colors">
            All Resources
          </button>
          <button onclick="filterResources('education')" class="filter-btn px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            Education
          </button>
          <button onclick="filterResources('techniques')" class="filter-btn px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            Techniques
          </button>
          <button onclick="filterResources('meditation')" class="filter-btn px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            Meditation
          </button>
          <button onclick="filterResources('academic')" class="filter-btn px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            Academic
          </button>
        </div>
      </div>

      <!-- Resources Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="resources-grid">
        <% resources.forEach(resource => { %>
          <div class="resource-card bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-category="<%= resource.category %>">
            <!-- Resource Type Badge -->
            <div class="flex items-center justify-between mb-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                <% if (resource.type === 'article') { %>
                  bg-blue-100 text-blue-800
                <% } else if (resource.type === 'video') { %>
                  bg-red-100 text-red-800
                <% } else { %>
                  bg-purple-100 text-purple-800
                <% } %>
              ">
                <% if (resource.type === 'article') { %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                <% } else if (resource.type === 'video') { %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 00.707-.293L12 8.414l.707.293A1 1 0 0013.586 10H15m-3-5v2m0 0V5a1 1 0 011-1h4a1 1 0 011 1v2M9 7h6"></path>
                  </svg>
                <% } else { %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                <% } %>
                <%= resource.type.charAt(0).toUpperCase() + resource.type.slice(1) %>
              </span>
              
              <!-- Category Badge -->
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-600 capitalize">
                <%= resource.category.replace('-', ' ') %>
              </span>
            </div>

            <!-- Resource Content -->
            <h3 class="text-lg font-semibold text-gray-800 mb-3 line-clamp-2">
              <%= resource.title %>
            </h3>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= resource.description %>
            </p>

            <!-- Action Button -->
            <a 
              href="<%= resource.url %>" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors font-medium text-sm"
            >
              <% if (resource.type === 'video') { %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 00.707-.293L12 8.414l.707.293A1 1 0 0013.586 10H15m-3-5v2m0 0V5a1 1 0 011-1h4a1 1 0 011 1v2M9 7h6"></path>
                </svg>
                Watch Video
              <% } else { %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Read More
              <% } %>
            </a>
          </div>
        <% }); %>
      </div>

      <!-- Emergency Resources -->
      <div class="mt-12 bg-red-50 border border-red-200 rounded-xl p-8">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.888-.833-2.598 0L3.196 16.5c-.77.833-.192 2.5 1.344 2.5z"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-red-800 mb-4">Crisis Support Resources</h3>
            <p class="text-red-700 mb-6">
              If you're experiencing a mental health crisis or having thoughts of self-harm, please reach out for immediate help:
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <a href="tel:988" class="flex items-center p-4 bg-white border border-red-200 rounded-lg hover:bg-red-50 transition-colors">
                <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-red-800">Crisis Lifeline</div>
                  <div class="text-sm text-red-600">Call 988 - Available 24/7</div>
                </div>
              </a>

              <a href="sms:8448-8448-45" class="flex items-center p-4 bg-white border border-red-200 rounded-lg hover:bg-red-50 transition-colors">
                <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-red-800">Crisis Text Line</div>
                  <div class="text-sm text-red-600">Text HOME to 8448-8448-45</div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Helpful Resources -->
      <div class="mt-8 bg-blue-50 border border-blue-200 rounded-xl p-8">
        <h3 class="text-xl font-bold text-blue-800 mb-4">Additional Support</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-blue-800 mb-2">Group Chat</h4>
            <p class="text-sm text-blue-600 mb-3">Connect with peers for mutual support</p>
            <a href="/chat" class="text-blue-600 hover:text-blue-700 font-medium text-sm">Join Chat →</a>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-blue-800 mb-2">AI Educator</h4>
            <p class="text-sm text-blue-600 mb-3">Get personalized wellness guidance</p>
            <a href="/ai/educate" class="text-blue-600 hover:text-blue-700 font-medium text-sm">Ask AI →</a>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-blue-800 mb-2">Helper Network</h4>
            <p class="text-sm text-blue-600 mb-3">Connect with trained peer helpers</p>
            <a href="/helper/students" class="text-blue-600 hover:text-blue-700 font-medium text-sm">Find Helpers →</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Resource filtering functionality
    function filterResources(category) {
      const cards = document.querySelectorAll('.resource-card');
      const buttons = document.querySelectorAll('.filter-btn');
      
      // Update button states
      buttons.forEach(btn => {
        btn.classList.remove('active', 'bg-green-500', 'text-white');
        btn.classList.add('bg-gray-200', 'text-gray-700');
      });
      
      event.target.classList.remove('bg-gray-200', 'text-gray-700');
      event.target.classList.add('active', 'bg-green-500', 'text-white');
      
      // Filter cards
      cards.forEach(card => {
        if (category === 'all' || card.dataset.category === category) {
          card.style.display = 'block';
          card.style.animation = 'fadeIn 0.3s ease-in';
        } else {
          card.style.display = 'none';
        }
      });
    }

    // Add fade-in animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>